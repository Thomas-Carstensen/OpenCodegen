{
  "name": "opencodegen",
  "version": "0.1.0",
  "description": "Generate typed API clients from OpenAPI specifications",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "bin": {
    "opencodegen": "./dist/cli/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "bun src/cli/index.ts",
    "build": "bun build src/cli/index.ts --outfile dist/cli/index.js --target node",
    "build:types": "tsc --emitDeclarationOnly",
    "typecheck": "tsc --noEmit",
    "test": "bun test"
  },
  "keywords": [
    "openapi",
    "codegen",
    "typescript",
    "api-client"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.3.0",
    "yaml": "^2.8.2"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "openapi-types": "^12.1.3",
    "typescript": "^5.9.3"
  }
}
